<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationuser"
    tools:context="presentation.regestration.RegistrationActivity">


    <EditText
        android:id="@+id/editSurname"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:hint="Фамилия"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E8DEDE"
        android:textColorHint="#E8DEDE"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Имя"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E8DEDE"
        android:textColorHint="#E8DEDE"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editSurname" />

    <EditText
        android:id="@+id/editPhone"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Введите номер телефона"
        android:inputType="phone"
        android:soundEffectsEnabled="false"
        android:textAlignment="center"
        android:textColor="#E8DEDE"
        android:textColorHint="#E8DEDE"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editName" />

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:hint="Создайте пароль"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#E8DEDE"

        android:textColorHint="#E8DEDE"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editPhone" />

    <ImageView
        android:id="@+id/buttonBackRegMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_sphere"
        android:src="@drawable/buttonback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

    </ImageView>

    <ImageButton
        android:id="@+id/buttonSave"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:layout_marginStart="104dp"
        android:background="@drawable/save_orange"
        android:onClick="enterUser"
        android:text="Войти"
        android:textColor="#fabe62"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPassword"
        app:layout_constraintVertical_bias="0.88" />

</androidx.constraintlayout.widget.ConstraintLayout>



